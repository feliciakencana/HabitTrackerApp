<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recyclerviewitem"
    android:paddingBottom="20dp"
    app:cardBackgroundColor="#00000000">

    <ImageView
        android:id="@+id/imgview_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:visibility="visible"
        app:srcCompat="@drawable/defaulthabit" />

    <ImageView
        android:id="@+id/imgview_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="29dp"
        android:visibility="gone"
        app:srcCompat="@drawable/done" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_displayHabitName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:fontFamily="@font/roboto_medium"
            android:text="Reading"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_display_reachedGoal"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:fontFamily="@font/roboto_medium"
            android:text="10"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="9dp"
            android:layout_weight="0"
            android:fontFamily="@font/roboto_medium"
            android:text="/"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_disp_targetedGoal"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:fontFamily="@font/roboto_medium"
            android:text="10"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_displayValueUnit"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0"
            android:text="pages"
            android:textSize="11sp" />
    </LinearLayout>

</RelativeLayout>